--user create:
CREATE USER 'talkieuser'@'localhost' IDENTIFIED BY 'talkiepassword';
GRANT ALL PRIVILEGES ON * . * TO 'talkieuser'@'localhost';
--database create:
CREATE DATABASE talkie;
USE talkie;
--tables create:
CREATE TABLE answers (id INT NOT NULL, answer TEXT NOT NULL, PRIMARY KEY(id));
CREATE TABLE questions (qmd5 CHAR(32) NOT NULL, ansid INT NOT NULL, PRIMARY KEY(qmd5), FOREIGN KEY (ansid) REFERENCES answers(id));
